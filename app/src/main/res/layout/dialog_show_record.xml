<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minHeight="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_8">

    <TextView
        android:id="@+id/tv_show_record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_32"
        android:layout_margin="@dimen/dp_16"
        tools:text="这是一段标题"/>

    <TextView
        android:id="@+id/tv_show_record_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:scrollbars="vertical"
        android:lineSpacingExtra="@dimen/dp_2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:text="\u3000\u3000这是详细内容，足足有这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么长" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bottom_shadow"
        android:id="@+id/view_shadow" />
    <LinearLayout
        android:id="@+id/ll_show_record_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_show_record_save"
            style="@style/LL_avg"
            android:visibility="gone"
            android:text="保存本地"
            android:background="@null" />

        <Button
            android:id="@+id/btn_show_record_upload"
            style="@style/LL_avg"
            android:visibility="gone"
            android:text="上传段子"
            android:background="@null" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_show_record_KP"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_show_record_finish"
            style="@style/LL_avg"
            android:text="完成"
            android:background="@null" />
        <Button
            android:id="@+id/btn_show_record_kp"
            style="@style/LL_avg"
            android:text="暗骰"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_record_PC"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_show_record_research"
            style="@style/LL_avg"
            android:text="调查"
            android:background="@null" />

        <Button
            android:id="@+id/btn_show_record_talk"
            style="@style/LL_avg"
            android:text="交涉"
            android:background="@null" />

        <Button
            android:id="@+id/btn_show_record_show"
            style="@style/LL_avg"
            android:text="人物卡"
            android:background="@null" />

        <Button
            android:id="@+id/btn_show_record_battle"
            style="@style/LL_avg"
            android:text="战斗"
            android:background="@null" />

        <Button
            android:id="@+id/btn_show_record_others"
            style="@style/LL_avg"
            android:text="其他"
            android:background="@null" />

    </LinearLayout>

</LinearLayout>

