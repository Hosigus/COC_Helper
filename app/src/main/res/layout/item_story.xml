<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_144"
    android:layout_margin="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_item_story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            tools:text="这是一段标题"/>

        <TextView
            android:id="@+id/tv_item_story_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_item_story_title"
            android:lines="3"
            android:ellipsize="end"
            tools:text="\u3000\u3000这是详细内容，足足有这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么长" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_story_detail"
            android:layout_alignParentStart="true">
            <TextView
                android:drawableStart="@drawable/ic_btn_like"
                android:id="@+id/tv_item_story_like"
                android:layout_gravity="center"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/pink"
                android:background="@drawable/background_btn_like_light"
                android:gravity="center"
                tools:text="100"/>
            <TextView
                android:drawableEnd="@drawable/ic_btn_embarrass"
                android:id="@+id/tv_item_story_embarrass"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/dp_4"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/blue"
                android:background="@drawable/background_btn_embarrass_light"
                android:gravity="center"
                tools:text="100" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>