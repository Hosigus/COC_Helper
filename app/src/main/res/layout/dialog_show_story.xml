<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minHeight="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_8"
    android:padding="@dimen/dp_8">

    <TextView
        android:id="@+id/tv_show_story_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_32"
        android:layout_margin="@dimen/dp_8"
        tools:text="这是一段标题"/>

    <TextView
        android:id="@+id/tv_show_story_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_16"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:text="\u3000\u3000这是详细内容，足足有这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么长" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_show_story_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/background_btn_like_light"
            android:drawableStart="@drawable/ic_btn_like"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="@dimen/dp_8"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/pink"
            tools:text="100" />

        <TextView
            android:id="@+id/tv_show_story_embarrass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/background_btn_embarrass_light"
            android:drawableEnd="@drawable/ic_btn_embarrass"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_4"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/blue"
            tools:text="100" />
    </LinearLayout>

</LinearLayout>

