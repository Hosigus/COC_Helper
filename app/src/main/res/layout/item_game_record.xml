<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_144"
    android:layout_margin="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_item_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            tools:text="这是一段标题"/>

        <TextView
            android:id="@+id/tv_item_record_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_item_record_title"
            android:lines="3"
            android:ellipsize="end"
            tools:text="\u3000\u3000这是详细内容，足足有这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么这么长" />

        <Button
            android:id="@+id/btn_item_record_show"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="查看详情"
            android:textColor="@color/blue"
            android:background="@drawable/shape_radius_dash" />

    </RelativeLayout>

</android.support.v7.widget.CardView>